@page "/boten"
@attribute [Authorize(Roles = "Materiaalcommissaris")]
@using Kbs.Business.Boat
@using Kbs.Business.Damage
@inject IBoatRepository BoatRepository
@inject IDamageRepository DamageRepository

<PageTitle>Boten</PageTitle>
<h1 class="col-4">Boten</h1>

<div class="row">
    <div class="col-4">
        <a href="/boten/aanmaken" class="btn btn-primary">Boot aanmaken</a>
    </div>
</div>


<div class="row d-flex justify-content-start">
    
    @foreach (var boat in _boats)
    {
        <Card SubTitle="@boat.Status.ToDutchString()" Title="@boat.Name">
            @if (DamageRepository.HasDamage(boat))
            {
                <p class="text-danger">Heeft schade</p>
            }
            else
            {
                <p class="text-success">Geen schade</p>
            }
            <a href="/boten/@boat.BoatId" class="btn btn-primary">Details</a>
        </Card>
    }
</div>

@code {
    private List<BoatEntity> _boats = new();

    protected override void OnInitialized()
    {
        _boats = BoatRepository.GetMany();
    }

}