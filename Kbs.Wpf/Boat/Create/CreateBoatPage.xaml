<Page x:Class="Kbs.Wpf.Boat.Create.CreateBoatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Kbs.Wpf.Boat.Create"
      mc:Ignorable="d"
      Title="CreateBoatPage" d:DesignHeight="450" d:DesignWidth="620">
    <Page.DataContext>
        <local:CreateBoatViewModel />
    </Page.DataContext>
    <Grid>
        <Label FontSize="24" Content="Aanmaken boot" HorizontalAlignment="Left" Margin="175,47,0,0"
               VerticalAlignment="Top" />
        
        <Label Content="Naam" HorizontalAlignment="Left" Margin="38,117,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Name}" HorizontalAlignment="Left" Margin="38,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20"/>

        <Label Content="Boot type" HorizontalAlignment="Left" Margin="228,117,0,0" VerticalAlignment="Top"/>
        <ComboBox ItemsSource="{Binding PossibleBoatTypes}" SelectionChanged="TypeChanged" IsEditable="True" Text="Selecteer boot type" HorizontalAlignment="Left" Margin="228,141,0,0" VerticalAlignment="Top" Width="120"/>
        
        <Button Content="Opslaan" HorizontalAlignment="Left" Margin="415,225,0,0" VerticalAlignment="Top" Height="20" Width="120" Click="Submit"/>
    </Grid>
</Page>
