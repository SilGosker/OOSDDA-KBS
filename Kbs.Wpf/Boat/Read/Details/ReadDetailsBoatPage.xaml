<Page x:Class="Kbs.Wpf.Boat.Read.Details.ReadDetailsBoatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:details="clr-namespace:Kbs.Wpf.Boat.Read.Details"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="620"
      Background="White"
      HorizontalAlignment="Center"
      Title="ReadDetailsBoatPage">
    <Page.DataContext>
        <details:ReadDetailsBoatViewModel />
    </Page.DataContext>
    <ScrollViewer>
        <Grid HorizontalAlignment="Center" Width="620">
            <Label FontSize="32" Content="Boot #" HorizontalAlignment="Left" Margin="38,50,0,0"
           VerticalAlignment="Top" />

            <Label FontSize="32" Content="{Binding BoatId}" HorizontalAlignment="Left" Margin="135,50,0,0"
           VerticalAlignment="Top" />

            <Separator Margin="10,108,0,0" Height="4" VerticalAlignment="Top" HorizontalAlignment="Left" Width="600"/>

            <Label Content="Naam:" FontWeight="Bold" Margin="10,110,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Label Content="Type:" FontWeight="Bold" Margin="10,135,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Label Content="Status:" FontWeight="Bold" Margin="10,160,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Label Content="Reserveringen" FontWeight="Bold" Margin="218,110,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Label Content="Datum aanvraag:" FontWeight="Bold" Margin="10,323,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Label Content="Wachttijd:" FontWeight="Bold" Margin="10,355,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Label Content="VerwijderingsSpecificatie" FontWeight="Bold" Margin="10,287,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Label Content="{Binding Name}" Margin="67,112,0,0" Height="28" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Label Content="{Binding BoatTypeName}" Margin="67,135,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Label Content="{Binding Status}" Margin="67,160,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Label Content="{Binding DeleteRequestDateMessage}" Margin="122,323,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="72" />
            <Label Content="{Binding WaitDurationMessage}" Margin="119,355,0,0" Height="107" VerticalAlignment="Top" HorizontalAlignment="Left" Width="246" RenderTransformOrigin="0.5,0.5" >
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-0.555"/>
                        <RotateTransform/>
                        <TranslateTransform X="-0.518"/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>

            <Button Content="{Binding RequestButtonText}" Click="RequestDeletion" HorizontalAlignment="Left" Margin="216,66,0,0" VerticalAlignment="Top"/>
            <Button Content="Permanent verwijderen" Click="PermanentDeletion" IsEnabled="{Binding DeleteButtonEnabled}" HorizontalAlignment="Left" Margin="412,66,0,0" VerticalAlignment="Top" />

            <DataGrid SelectionMode="Single" SelectionUnit="FullRow" IsReadOnly="True" AutoGenerateColumns="False" Width="320" ItemsSource="{Binding Reservations}"
              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
              VerticalAlignment="Top" HorizontalAlignment="Left" Margin="218,135,0,0" Height="261">

                <DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <EventSetter Event="MouseDoubleClick" Handler="ReservationSelected"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Width="80" Header="Gebruiker"  Binding="{Binding Name}"/>
                    <DataGridTextColumn Width="80" Header="Startdatum" Binding="{Binding StartDate}" />
                    <DataGridTextColumn Width="80" Header="Eindtijd" Binding="{Binding EndDate}" />
                    <DataGridTextColumn Width="80" Header="Status" Binding="{Binding Status}" />
                </DataGrid.Columns>
            </DataGrid>

            <Separator Margin="0,401,0,0" Height="4" VerticalAlignment="Top" HorizontalAlignment="Left" Width="600"/>
            <Label Content="Beschadigingen" FontWeight="Bold" Margin="10,410,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <CheckBox Content="Toon alleen opgeloste beschadigingen" HorizontalAlignment="Left" Margin="165,416,0,0" VerticalAlignment="Top" Unchecked="ShowSolvedDamages_Changed"  Checked="ShowSolvedDamages_Changed"/>

            <ListView Width="600" ItemsSource="{Binding Damages}" d:ItemsSource="{d:SampleData ItemCount=5}"
              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
              VerticalAlignment="Top" Margin="0,441,0,0">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <EventSetter Event="PreviewMouseLeftButtonUp" Handler="NavigateToDamage"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Width="600" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" Height="140" Width="180" />
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="100" />
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0" HorizontalAlignment="Center" Content="{Binding Date}" />

                                <Image Grid.Row="1" Source="{Binding Image}" MaxWidth="100" />
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>
    </ScrollViewer>
    
</Page>
