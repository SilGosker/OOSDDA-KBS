<Window x:Class="Kbs.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Width="180" Background="Orange" RenderTransformOrigin="0.516,0.503">
            <Button Content="Mijn reserveringen" Margin="25,10,25,0" Click="MyReservations" VerticalAlignment="Top"  />
            <Button Content="Log uit" Width="80" Height="24" Margin="50,0,50,10" Click="LogOut" VerticalAlignment="Bottom" />
            <Button Content="Reserveren" Margin="25,35,25,0" Click="MyReservations" VerticalAlignment="Top"  />
            <Button Content="Instellingen" Margin="25,60,25,0" Click="MyReservations" VerticalAlignment="Top"  />
        </Grid>

        <DockPanel Background="White" Margin="180,0,0,0" >
            <Frame x:Name="NavigationFrame" NavigationUIVisibility="Hidden" />
        </DockPanel>

    </Grid>
</Window>
