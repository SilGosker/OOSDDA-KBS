<Page x:Class="Kbs.Wpf.Reservation.ViewReservation.ViewReservationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kbs.Wpf.Reservation.ViewReservation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewReservationPage">

    <Grid>
        
        <TextBlock Text="Mijn reserveringen" Margin="20,26,177,0" VerticalAlignment="Top" Height="105" FontSize="30" RenderTransformOrigin="0.5,0.5" >
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.396"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Border Name="Border1" 
            Margin="10,117,30,0" 
            VerticalAlignment="Top" 
            Height="140" 
            BorderBrush="Gray" 
            BorderThickness="1" 
            CornerRadius="5" 
            Background="LightGray">
            <Grid Margin="10">
                <TextBlock Text="Boot1" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       VerticalAlignment="Top" />
                <StackPanel Orientation="Vertical" Margin="0,40,0,0">
                    <TextBlock Text="Niveau: Gevorderd" FontSize="14" />
                    <TextBlock Text="Tijdstip: 14:00" FontSize="14" />
                    <TextBlock Text="Tijdsduur: 2 uur" FontSize="14" />
                    <TextBlock Text="Zitplaatsen: 4" FontSize="14" />
                </StackPanel>
            </Grid>
        </Border>
        <Border Name="Border2" 
            Margin="10,281,30,0" 
            VerticalAlignment="Top" 
            Height="140" 
            BorderBrush="Gray" 
            BorderThickness="1" 
            CornerRadius="5" 
            Background="LightGray">
            <Grid Margin="10">
                <TextBlock Text="Boot2" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       VerticalAlignment="Top" />
                <StackPanel Orientation="Vertical" Margin="0,40,0,0">
                    <TextBlock Text="Niveau: Beginner" FontSize="14" />
                    <TextBlock Text="Tijdstip: 16:00" FontSize="14" />
                    <TextBlock Text="Tijdsduur: 1 uur" FontSize="14" />
                    <TextBlock Text="Zitplaatsen: 2" FontSize="14" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
