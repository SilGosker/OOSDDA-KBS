<Window x:Class="Kbs.Wpf.User.Update.AccountView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kbs.Wpf.User.Update"
        xmlns:login="clr-namespace:Kbs.Wpf.User.Login"
        mc:Ignorable="d"
        Title="AccountView" Height="450" Width="800">
    <Window.DataContext>
        <login:LoginViewModel />
    </Window.DataContext>
    <Grid>
        <Label Content="Instellingen" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="22"/>

        <Label Content="Email:" HorizontalAlignment="Left" Margin="285,96,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Margin="290,122,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Ongeldige email" HorizontalAlignment="Left" Margin="285,139,0,0" VerticalAlignment="Top" Foreground="Red"/>

        <Label Content="Nieuw wachtwoord:" HorizontalAlignment="Left" Margin="285,171,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <PasswordBox HorizontalAlignment="Left" Margin="290,197,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Ongeldig wachtwoord" HorizontalAlignment="Left" Margin="285,215,0,0" VerticalAlignment="Top" Foreground="Red"/>

        <Label Content="Nieuw wachtwoord:" HorizontalAlignment="Left" Margin="285,243,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <PasswordBox HorizontalAlignment="Left" Margin="290,269,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Wachtwoord komt niet overeen" HorizontalAlignment="Left" Margin="285,286,0,0" VerticalAlignment="Top" Foreground="Red"/>
        
        <Button Content="Bevestig" HorizontalAlignment="Left" Margin="285,351,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Annuleer" HorizontalAlignment="Left" Margin="426,351,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>

    </Grid>
</Window>
